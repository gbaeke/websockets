{
  "name": "realtime-dashboard",
  "version": "1.0.0",
  "description": "A real-time dashboard application using WebSockets",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "python server.py",
    "client": "cd client && npm start",
    "client-install": "cd client && npm install",
    "dev-full": "concurrently \"npm run dev\" \"npm run client\""
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
